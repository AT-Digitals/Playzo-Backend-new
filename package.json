{
  "name": "playzo-api",
  "version": "1.0.0",
  "description": "API for FABO website and admin panel",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "start": "yarn run build && yarn run watch",
    "build": "yarn run clean && yarn run build-ts && yarn run eslint",
    "serve": "nodemon --delay 500ms ./dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\"  \"yarn run watch-ts\" \"yarn run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test": "jest --passWithNoTests",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git@git.aftertutor.com:at-digitals/fabo-api.git"
  },
  "author": "Tamilarasu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.30.0",
    "mongodb": "^3.6.10",
    "mongoose": "^5.13.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "razorpay": "^2.9.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "0.9.0",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.11",
    "@types/csurf": "^1.11.2",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongodb": "^3.6.20",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^15.14.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "import-sort-parser-typescript": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-watch": "^1.0.8",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint src/*.{js,ts,tsx} --fix-dry-run",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{html,css,scss,md,json,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
